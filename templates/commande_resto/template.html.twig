   :root {
    --card-border-color:  #86b6dc; /* Teal color */
    --hover-shadow-color: rgba(0, 0, 139, 0.5); /* Dark blue color for the shadow */
   }

  .cards {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .card {
    background-color:#f8f9fa;
    border: 4px solid var(--card-border-color);
    border-radius: 20px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    overflow: hidden;
    transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
  }

  .card:hover {
    box-shadow: 0 5px 15px var(--hover-shadow-color); /* Darker blue shadow on hover */
    transform: translateY(-5px); /* Slight lift effect on hover */
  }

  .card-header {
    background-color: #fff; /* Changed from light grey to white */
    padding: 5px; /* Reduced padding to make header smaller */
    font-weight: bold;
    border-bottom: 2px solid var(--card-border-color); /* Teal border at the bottom of the header */
  }

  .card-body {
    padding: 20px;
  }

  /* Updated the .status-select styling */
  .status-select {
    width: 100%;
    padding: 10px 15px; /* Adjust padding as needed */
    border: 2px solid var(--card-border-color); /* Teal border color */
    border-radius: 20px; /* Match the card border-radius */
    font-size: 0.9em; /* Adjust font size as needed */
    color: #333; /* Darker text color for better legibility */
    background-color: #fff; /* Changed to solid white background */
    box-shadow: none; /* Removed inset shadow for a flatter design */
    -webkit-appearance: none; /* Removes default styling from select dropdown */
    -moz-appearance: none;
    appearance: none;
    cursor: pointer; /* Changes cursor to indicate it's a clickable dropdown */
  }

  .status-select:hover {
    background-color: #fff; /* Keeps the background color white on hover */
    border: 2px solid darken(var(--card-border-color), 10%); /* Optionally darken the border on hover */
  }

  .status-select:focus {
    outline: none; /* Removes the default focus outline */
    box-shadow: 0 0 0 2px var(--card-border-color); /* Adds a focus outline matching the card border color */
  }
  /* Style for the options within the dropdown */
  .status-select option {
    background-color: #fff; /* White background for the dropdown options */
    color: #333; /* Darker text for better legibility */
  }

  /* Style for the option when it is hovered over */
  .status-select option:hover {
    background-color: var(--card-border-color); /* Same color as the border for hover */
    color: #fff; /* White text on the colored background for better legibility */
  }

  /* Style for the option when it is selected */
  .status-select::selection {
  background-color: var(--card-border-color);
  color: #fff;}
  .pagination .page-link {
        border-radius: 0; /* Coins carrés */
        background-color: #fff; /* Fond blanc par défaut */
        color: var(--card-border-color); /* Couleur du texte bleue */
        border-color: var(--card-border-color); /* Bordure bleue */
    }
    
    .pagination .page-item.active .page-link {
        background-color: var(--card-border-color); /* Fond bleu pour l'élément actif */
        border-color: var(--card-border-color)
